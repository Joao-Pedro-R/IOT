void setup()
{
  Serial.begin (9600);
}

void loop() {
	Serial.println (5+1);
	Serial.println (5-1);
	Serial.println (5*1);
	Serial.println (5/1);
}

---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

void setup() {
  Serial.begin (9600);
  
}

void loop() {
  int x = Serial.read();
  if (x%2 == 0)
    Serial.println("par");
  if (x%2 != 0)
    Serial.println("impar");
  delay(3000);
}

-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

void setup() {
  pinMode(10, OUTPUT);
  pinMode(9, OUTPUT);
  
  for (int i = 0; i < 6; i++){
  	  digitalWrite(10, HIGH);
      digitalWrite(9, HIGH);
      delay(1000);
      digitalWrite(10, LOW);
      digitalWrite(9, LOW);
      delay(1000);
  }
}

void loop() {}

