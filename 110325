void setup()
{
  Serial.begin (9600);
}

void loop() {
	Serial.println (5+1);
	Serial.println (5-1);
	Serial.println (5*1);
	Serial.println (5/1);
}

---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

void setup() {
  Serial.begin (9600);
  
}

void loop() {
  int x = Serial.read();
  if (x%2 == 0)
    Serial.println("par");
  if (x%2 != 0)
    Serial.println("impar");
  delay(3000);
}

-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

void setup() {
  pinMode(10, OUTPUT);
  pinMode(9, OUTPUT);
  
  for (int i = 0; i < 6; i++){
  	  digitalWrite(10, HIGH);
      digitalWrite(9, HIGH);
      delay(1000);
      digitalWrite(10, LOW);
      digitalWrite(9, LOW);
      delay(1000);
  }
}

void loop() {}

------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

void setup() {
  Serial.begin(9600);
  pinMode(10, OUTPUT);
  pinMode(9, OUTPUT);
  pinMode(8, OUTPUT);
  pinMode(7, OUTPUT);
}

void loop() {
  if (Serial.available() > 0) {
    char x = Serial.read();
    
    if (x == 'F') {
      digitalWrite(7, HIGH);
      digitalWrite(9, HIGH);
      delay(3000);
    } if (x == 'T') {
      digitalWrite(8, HIGH);
      digitalWrite(10, HIGH);
      delay(3000);
    } else {
      digitalWrite(8, LOW);
      digitalWrite(9, LOW);
      digitalWrite(10, LOW);
      digitalWrite(7, LOW);
    }
  }
}

-------------------------------------------------------------------------------------------------------------------------------------------

#define BOTAO 4
#define LED 3

void setup() {
  pinMode(BOTAO, INPUT);
  pinMode(LED, OUTPUT);
  Serial.begin(9600);
}

void loop() {
  if (digitalRead (BOTAO) == HIGH) {
    digitalWrite(LED,HIGH);
    Serial.println ("Botao Pressionado!");
  } else {
    digitalWrite(LED,LOW);
  }
}
